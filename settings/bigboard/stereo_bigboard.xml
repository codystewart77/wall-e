<?xml version="1.0"?>
<opencv_storage>
	<Settings>
	
		<!-- Number of inner corners per a item row and column. (square, circle) -->
		<BoardSize_Width>8</BoardSize_Width>
		<BoardSize_Height>6</BoardSize_Height>
		
		<!-- The size of a square in some user defined metric system (pixel, millimeter)-->
		<Square_Size>150</Square_Size>
		
		<!-- The maximum iterations for the stereo calibration-->
		<Iteration_Criteria>90</Iteration_Criteria>
		
		<!-- The eps convergence-->
		<EPS_Criteria>1e-9</EPS_Criteria>
		
		<!-- The output filename to save the calibration-->
		<Output_FileName>"../calibration_data/stereo_bigboard_480x360"</Output_FileName>
		
		<!-- The calibration files fdr the two cameras -->
		<Left_Parameters>"../calibration_data/axis151_bigboard_480x360.xml"</Left_Parameters>
		<Right_Parameters>"../calibration_data/axis152_bigboard_480x360.xml"</Right_Parameters>

   </Settings>
</opencv_storage>

<?xml version="1.0"?>
<opencv_storage>
	<Settings>
	
		<!-- Number of inner corners per a item row and column. (square, circle) -->
		<BoardSize_Width>7</BoardSize_Width>
		<BoardSize_Height>5</BoardSize_Height>
		
		<!-- The size of a square in some user defined metric system (pixel, millimeter)-->
		<Square_Size>150</Square_Size>
		
		<!-- The maximum iterations for the stereo calibration-->
		<Iteration_Criteria>30</Iteration_Criteria>
		
		<!-- The eps convergence-->
		<EPS_Criteria>1e-9</EPS_Criteria>
		
		<!-- The output filename to save the calibration-->
		<Output_FileName>"../savefiles/stereo_calib_bigboard"</Output_FileName>
		
		<!-- The calibration files fdr the two cameras -->
		<Left_Parameters>"../savefiles/AXIS151_bigboard.xml"</Left_Parameters>
		<Right_Parameters>"../savefiles/AXIS152_bigboard.xml"</Right_Parameters>		

   </Settings>
</opencv_storage>
